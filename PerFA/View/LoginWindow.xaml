<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:PerFA.ViewModel" x:Class="PerFA.View.LoginWindow"
        Title="Авторизація" Width="276" DataContextChanged="Window_DataContextChanged" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <ViewModel:VMLogin/>
    </Window.DataContext>
    <StackPanel Margin="10,0,10,10" VerticalAlignment="Top">
        <Label Content="Логін"/>
        <TextBox TextWrapping="Wrap" Text="{Binding Login.LoginData}"/>
        <Label Content="Пароль"/>
        <TextBox TextWrapping="Wrap" Text="{Binding Login.Password}"/>
        <Label Content="{Binding Login.LoginMessage, Mode=OneWay}"/>
        <Button Content="Авторизуватися" Command="{Binding LoginCommand}"/>
        <Button Content="Зареєструватися" Click="Button_Click" Margin="0,5,0,0"/>
    </StackPanel>
</Window>
