<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:PerFA.ViewModel"
        x:Class="PerFA.View.AllTransactionsWindow"
        Title="Transactions" Height="380" Width="729" DataContextChanged="Window_DataContextChanged">
    <Window.DataContext>
        <ViewModel:VMAllTransactions/>
    </Window.DataContext>
    <Grid>
        <Grid HorizontalAlignment="Left" Height="189" VerticalAlignment="Top" Width="711">
            <DataGrid x:Name="TransactionDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" 
                      ItemsSource="{Binding AllTransactionsClass.Transactions}" 
                      SelectedItem="{Binding AllTransactionsClass.SelectedTransaction}"
                      IsReadOnly ="True">
                <DataGrid.InputBindings>
                    <MouseBinding
                        MouseAction="LeftDoubleClick"
                        Command ="{Binding ViewTransactionCommand}"/>
                </DataGrid.InputBindings>
            </DataGrid>
        </Grid>
        <Button Content="View transaction" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="113" Margin="10,248,0,0" Command="{Binding ViewTransactionCommand}"/>
        <ComboBox VerticalAlignment="Center" Width="120" HorizontalAlignment="Right"
                  SelectedItem="{Binding AllTransactionsClass.SelectedNameOfTransaction}" 
                  ItemsSource="{Binding AllTransactionsClass.NamesOfTransaction}"/>
        <Button Content="Create transaction" VerticalAlignment="Bottom" HorizontalAlignment="Right" Command="{Binding CreateTransactionCommand}"/>
        <Button Content="Delete" Command="{Binding DeleteTransactionCommand}" VerticalAlignment="Top" HorizontalAlignment="Right"/>

    </Grid>
</Window>
