<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:PerFA.ViewModel" x:Class="PerFA.View.TransactionWindow"
        Title="TransactionWindow" Height="300" Width="300" DataContextChanged="Window_DataContextChanged">
    <Window.DataContext>
        <ViewModel:VMTransaction/>
    </Window.DataContext>
    <Grid>
        <Label Content="Дата" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Content="Опис" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-3,151,0,0"/>
        <Label Content="Сума" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,105,0,0"/>
        <Label Content="Автор" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,52,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Transaction.Transaction.Date}" VerticalAlignment="Top" Width="120" Margin="89,10,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Transaction.Transaction.Description}" VerticalAlignment="Top" Width="120" Margin="89,151,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Transaction.Transaction.Sum}" VerticalAlignment="Top" Width="120" Margin="74,105,0,0"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="{Binding Transaction.Transaction.AuthorName}" VerticalAlignment="Top" Width="120" Margin="74,54,0,0"/>
        <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="10,217,0,0" ItemsSource="{Binding Transaction.Transaction.UsersList}"/>

    </Grid>
</Window>
