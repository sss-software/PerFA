<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:PerFA.ViewModel" x:Class="PerFA.View.TransactionWindow"
        Title="TransactionWindow" Height="380" Width="729">
    <Window.DataContext>
        <ViewModel:ViewModelTransactions/>
    </Window.DataContext>
    <Grid>
        <DataGrid x:Name="TransactionDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" ItemsSource="{Binding TransactionsClass.Transactions}"/>

    </Grid>
</Window>
