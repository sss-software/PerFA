<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Model="clr-namespace:PerFA.Model" xmlns:ViewModel="clr-namespace:PerFA.ViewModel" x:Class="PerFA.View.RegistrationWindow"
        Title="RegistrationWindow" Height="300" Width="562">
    <Window.DataContext>
        <ViewModel:ViewModelRegistration/>
    </Window.DataContext>
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Margin="289,22,0,0" RenderTransformOrigin="0.5,0.5" Text="{Binding Registration.Name, Mode=Default}"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Margin="288,58,0,0" RenderTransformOrigin="0.5,0.5" Text="{Binding Registration.Login, Mode=Default}"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" Margin="290,104,0,0" RenderTransformOrigin="0.5,0.5" Text="{Binding Registration.Password, Mode=Default}"/>

        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="154,21,0,0" Width="124"/>
        <Label Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="154,52,0,0" Width="124"/>
        <Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="154,97,0,0" Width="124"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="239,193,0,0" VerticalAlignment="Top" Width="75" Command="{Binding RegistrateCommand}"/>

    </Grid>
</Window>
